model User {
  id        String    @id
  email     String    @unique
  role      Role      @default(USER)
  name      String?
  username String? @unique
  photoURL  String?
  website String?
  bio     String?
  project Project[]
  media Media[]
}
model Project {
  id        String    @id @default(cuid())
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @default(now())
  status Status
  complete isComplete @default(UNCOMPLETE)
  coverURL String[]
  explanImagesURL String[]
  slug String @unique
  title String
  price Float
  maxUnit Int
  openDay DateTime
  closeDay DateTime
  description String
  usedFor String
  requirements String
  contact String
  media Media[]
  author     User        @relation(fields: [authorId], references: [id])
  authorId String
}
model Media {
  id        String    @id @default(cuid()) 
  url String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @default(now()) 
  isApprove isApprove @default(PENDING)
  user    User    @relation(fields: [userId], references: [id])
  userId  String @unique
  project    Project    @relation(fields: [projectId], references: [id])
  projectId String
}
enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  PUBLISHED
  DELETED
}
enum isComplete {
  COMPLETE
  UNCOMPLETE
}
enum isApprove {
  PENDING
  REJECT
  APPROVE
}
